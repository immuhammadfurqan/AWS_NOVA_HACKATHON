# AARLP Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=AARLP
DEBUG=false

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/aarlp

# Pinecone Vector DB
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=aarlp-candidates

# OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Voice AI - Twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Voice AI - ElevenLabs (alternative)
ELEVENLABS_API_KEY=your-elevenlabs-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Google Calendar
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=token.json

# Recruitment Settings
MIN_APPLICANT_THRESHOLD=5
MONITORING_WAIT_DAYS=7

# Voice Provider Selection: "twilio" or "elevenlabs"
VOICE_PROVIDER=twilio
